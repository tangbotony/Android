<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@drawable/white_round_shape"
    android:orientation="vertical" >

    <!-- 状态类型 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/shake_diabolo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/dividing_bar"
            android:background="@drawable/left_white2gay_btn_selector_"
            android:contentDescription="@string/public_desc"
            android:padding="20dp"
            android:src="@drawable/shake_and_voice" />

        <TextView
            android:id="@+id/dividing_bar"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@color/dividing_line" />

        <ImageView
            android:id="@+id/shake"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/dividing_bar"
            android:background="@drawable/right_white2gay_btn_selector_"
            android:contentDescription="@string/public_desc"
            android:padding="20dp"
            android:src="@drawable/shake_only" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividing_line"
        android:contentDescription="@string/blank" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/diabolo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/dividing_bar_"
            android:background="@drawable/left_white2gay_btn_selector"
            android:contentDescription="@string/public_desc"
            android:padding="20dp"
            android:src="@drawable/voice" />

        <TextView
            android:id="@+id/dividing_bar_"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@color/dividing_line" />

        <ImageView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/dividing_bar_"
            android:background="@drawable/right_white2gay_btn_selector"
            android:contentDescription="@string/public_desc"
            android:padding="20dp"
            android:src="@drawable/quiet" />
    </RelativeLayout>

</LinearLayout>