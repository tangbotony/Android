<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/white_round_bg_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <!-- 标题栏（包含关闭按钮） -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/safety_warning"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_3" />

            
        </RelativeLayout>

        <!-- 菜品详情 -->

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/safety_warning_dialog_content"
            android:textColor="@color/text_red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividing_line"
            android:contentDescription="@string/blank" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/white2gray_bg_selector____"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@drawable/blue2blue_text_selector"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>

</LinearLayout>