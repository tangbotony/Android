<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_store_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_store_selector" >
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/default_phone_num"
	    android:layout_alignParentLeft="true"
	    android:padding="10dp"
	    android:textSize="@dimen/text_size_2"/>

	<ImageView
	    android:id="@+id/delete_phone"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_gravity="right"
	    android:contentDescription="@string/public_desc"
	    android:layout_alignParentRight="true"
	    android:padding="10dp"
	    android:src="@drawable/close_selector" />

</RelativeLayout>